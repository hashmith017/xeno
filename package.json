{
  "name": "xeno-monorepo",
  "version": "1.0.0",
  "scripts": {
    "start:backend": "cd backend && node server.js",
    "start:frontend": "cd frontend && npm run dev",
    "start": "concurrently \"npm:start:backend\" \"npm:start:frontend\"",
    "install": "cd backend && npm install && cd ../frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  }
}
